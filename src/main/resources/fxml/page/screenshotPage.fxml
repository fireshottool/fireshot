<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import me.fox.ui.settings.components.ext.ChoiceBoxComponent?>
<?import me.fox.ui.settings.components.ext.LocationChooserComponent?>
<?import me.fox.ui.settings.components.ext.ToggleSwitchComponent?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="me.fox.ui.settings.controller.page.ext.ScreenshotPageController"
      spacing="40" visible="false" managed="false">

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="title">Screenshot</Label>
        <Line styleClass="spaceLine" startX="10" endX="100000" startY="100" endY="100"/>
    </HBox>
    <LocationChooserComponent
            fx:id="locationChooser"
            text="Image location: "
            onAction="#imageLocationChanged"
    />

    <ToggleSwitchComponent
            fx:id="uploadCheckBox"
            text="Upload image"
            onAction="#uploadCheckBoxChanged"
    />

    <ToggleSwitchComponent
            fx:id="saveCheckBox"
            text="Save image"
            onAction="#saveCheckBoxChanged"
    />

    <ChoiceBoxComponent
            fx:id="imageTypeChoice"
            text="Save image as"
            onAction="#imageTypeChanged"
    />
</VBox>
